{% extends 'base.html.twig' %}

{% block title %}Wild Series - Log in!
{% endblock %}

{% block page_title %}
	<h1>Identifiez-vous
	</h1>
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes déjà connecté,
				{{ app.user.username }}.
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}

		<label for="inputMail">Adresse email</label>
		<input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control mb-4 mt-1" autocomplete="username" required autofocus>
		<label for="inputPassword">Mot de passe</label>
		<input type="password" name="password" id="inputPassword" class="form-control mb-4 mt-1" autocomplete="current-password" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" name="_remember_me">
				Rester connecté.
			</label>
		</div>

		<button class="btn btn-lg btn-primary" type="submit">
			Se connecter
		</button>
	</form>
{% endblock %}
