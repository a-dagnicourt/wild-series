{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Séries - Création
{% endblock %}

{% block page_title %}
	<h1>Créer une nouvelle série
	</h1>
{% endblock %}

{% block body %}
	{{ form_start(form) }}
	<div class="form-control mb-3">
		{{ form_widget(form) }}
		<input type='submit' value='Créer série' class="btn btn-primary my-4">
	</div>
	{{ form_end(form) }}

	<a href="{{ path('app_index') }}" class="btn btn-secondary m-4" role="button">
		Retour à l'accueil
	</a>

{% endblock %}
