<form method="post" action="{{ path('episode_delete', {'programSlug': episode.season.program.slug, 'seasonSlug': episode.season.slug, episodeSlug: episode.slug}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet épisode ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.id) }}">
	<button class="btn btn-danger">Supprimer</button>
</form>
