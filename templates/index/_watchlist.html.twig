<h2 class="h1 my-4">Votre liste</h2>
<div class="d-flex">
	<div class="row justify-content-center">
		{% for program in watchlist %}
			<div class="col-10 col-lg-2">
				<a href="{{ path('program_show', {'slug': program.slug}) }}">
					<div class="card bg-dark text-white mb-4">
						<img src="{{vich_uploader_asset(program)}}" class="card-img" alt="{{program.title}}" style="height: 15vh;object-fit: cover;filter: brightness(0.33)">
						<div class="card-img-overlay">
							<h3 class="h5">{{program.title}}</h3>
						</div>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
</div>
