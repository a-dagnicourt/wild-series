{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	-
	{{season.program.title}}
	-
											    Saison
	{{season.number}}
{% endblock %}

{% block page_title %}
	<h1>{{season.program.title}}
	</h1>
	<h3 class="text-muted">
		Saison
		{{season.number}}</h3>
{% endblock %}

{% block body %}
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ season.id }}</td>
			</tr>
			<tr>
				<th>Numéro</th>
				<td>{{ season.number }}</td>
			</tr>
			<tr>
				<th>Année</th>
				<td>{{ season.year }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ season.description }}</td>
			</tr>
		</tbody>
	</table>


	<a href="{{ path('season_edit', {'id': season.id}) }}" class="btn btn-warning" role="button">Editer</a>
	{{ include('season/_delete_form.html.twig') }}

	<a href="{{ path('season_index') }}" class="btn btn-secondary m-4" role="button">Retour</a>
{% endblock %}
